# Host IP address where the MCP server is running
HOST_IP=<YOUR_HOST_IP>
# Port for the SSE endpoint
SSE_PORT=<YOUR_SSE_PORT>
# TriliumNext Notes API URL
# Default is http://localhost:8080/etapi
# If Trilium is running on a different host, adjust accordingly
TRILIUM_API_URL=<YOUR_TRILIUM_API_URL>
# TriliumNext Notes API Token (REQUIRED)
# Get this from your Trilium Notes settings
TRILIUM_API_TOKEN=<YOUR_TRILIUM_API_TOKEN>